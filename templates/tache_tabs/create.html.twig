{% extends 'base.html.twig' %}
{% block title %}Création tâches | Colaboration{% endblock %}
{% block body %}
    <body>
    <div class="flex justify-center items-center w-full bg-blue-500 shadow-lg">
        <div class="w-min bg-white rounded shadow-2xl p-5 m-4 flex justify-center">
            {{ form_start(form) }}
            <div class="flex justify-center mx-auto mb-2">
                <div class="w-full w-52 px-3 mb-6 md:mb-0">
                    {{ form_row(form.nomTache, {
                        label_class: 'mb-2 font-bold text-lg text-gray-900 underline',
                        widget_class: 'mt-2 flex border rounded-lg border-gray-200 bg-gray-50 p-2 w-max',
                    }) }}
                </div>
                <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                    {{ form_row(form.descriptionTache, {
                        label_class: 'mb-2 font-bold text-lg text-gray-900 underline',
                        widget_class: 'mt-2 flex border rounded-lg border-gray-200 bg-gray-50 p-2 w-max',
                    }) }}
                </div>
            </div>
            <div class="flex justify-center -mx-3 mb-2 flex">
                <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                    {{ form_row(form.avancementTache, {
                        label_class: 'mb-2 font-bold text-lg text-gray-900 underline',
                        widget_class: 'mt-2 flex border rounded-lg border-gray-200 bg-gray-50 p-2 w-max',

                    }) }}
                </div>
            </div>
            <div class="mb-2 justify-center">
                <div class="md:w-1/3 px-3 mb-6 md:mb-0">
                    {{ form_row(form.limiteDateTache, {
                        label_class: 'mb-2 font-bold text-lg text-gray-900 underline',
                        widget_class: 'mt-2 flex rounded-lg border-gray-200 bg-gray-50',
                    }) }}
                </div>
            <input type="submit" value="Envoyer">
            {{ form_end(form) }}
        </div>
    </div>
    </body>
{% endblock %}