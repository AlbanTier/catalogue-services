{% extends 'base.html.twig' %}
{% block title %}Création tableau | Colaboration{% endblock %}
{% block body %}

    <body>


    <div class="bg-indigo-500">
        <div class="hidden sm:block" aria-hidden="true">
            <div class="py-5">
                <div class="border-t border-gray-500"></div>
            </div>
        </div>

        <div class="mt-10 sm:mt-0">
            <div class="md:grid md:grid-cols-3 md:gap-6">
                <div class="mt-5 md:mt-0 md:col-span-2">
                    <form action="#" method="POST">
                        <div class="shadow overflow-hidden sm:rounded-md">
                            <div class="px-4 py-5 bg-white sm:p-6">
                                <div class="grid grid-cols-6 gap-6">
                                    <div class="col-span-6 sm:col-span-3">
                                        <label for="first-name" class="block text-sm font-medium text-gray-700">Désignation</label>
                                        <input type="text" name="first-name" id="first-name" autocomplete="given-name" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">
                                    </div>

                                    <div class="col-span-6 sm:col-span-3">
                                        <label for="last-name" class="block text-sm font-medium text-gray-700">Marque</label>
                                        <input type="text" name="last-name" id="last-name" autocomplete="family-name" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">
                                    </div>

                                    <div class="col-span-6 sm:col-span-4">
                                        <label for="email-address" class="block text-sm font-medium text-gray-700">Référence</label>
                                        <input type="text" name="email-address" id="email-address" autocomplete="email" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">
                                    </div>

                                    <div class="col-span-6 sm:col-span-3">
                                        <label for="country" class="block text-sm font-medium text-gray-700">Quantité</label>
                                        <input type="text" name="email-address" id="email-address" autocomplete="email" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">

                                    </div>

                                    <div class="col-span-6">
                                        <label for="street-address" class="block text-sm font-medium text-gray-700">Prix TTC</label>
                                        <input type="text" name="street-address" id="street-address" autocomplete="street-address" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">
                                    </div>

                                    <div class="col-span-6 sm:col-span-6 lg:col-span-2">
                                        <label for="city" class="block text-sm font-medium text-gray-700">Garantie</label>
                                        <input type="radio" name="city" id="city" autocomplete="address-level2" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">
                                    </div>

                                    <div class="col-span-6 sm:col-span-3 lg:col-span-2">
                                        <label for="region" class="block text-sm font-medium text-gray-700">Type garantie</label>
                                        <input type="text" name="region" id="region" autocomplete="address-level1" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">
                                    </div>

                                    <div class="col-span-6 sm:col-span-3 lg:col-span-2">
                                        <label for="postal-code" class="block text-sm font-medium text-gray-700">Numéro d'immobilisation</label>
                                        <input type="text" name="postal-code" id="postal-code" autocomplete="postal-code" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">
                                    </div>
                                </div>
                            </div>
                            <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
                                <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                    Save
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>










    ////
    <div class="justify-center flex items-center bg-blue-500 shadow-lg">
        <div class=" bg-white rounded shadow-2xl p-5 m-4 flex-wrap justify-center justify-between">
            {{ form_start(form) }}
            {# Première ligne #}
                <div class="flex flex-wrap -mx-3 mb-2">
                    <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                    {{ form_row(form.designation, {
                        label_class: 'mb-2 font-bold text-lg text-gray-900 underline',
                        widget_class: 'mt-2 flex border rounded-lg border-gray-200 bg-gray-50 p-2 w-max',
                    })
                    }}
                    </div>
                    <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                    {{ form_row(form.marque, {
                        label_class: 'mb-2 font-bold text-lg text-gray-900 underline',
                        widget_class: 'mt-2 flex border rounded-lg border-gray-200 bg-gray-50 p-2 w-max',
                    })
                    }}
                    </div>
                    <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                    {{ form_row(form.reference, {
                        label_class: 'mb-2 font-bold text-lg text-gray-900 underline',
                        widget_class: 'mt-2 flex border rounded-lg border-gray-200 bg-gray-50 p-2 w-max',
                    })
                    }}
                    </div>
                </div>
            {# Deuxièmre ligne #}
            <div class="flex flex-wrap -mx-3 mb-2 justify-center">
                <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                    {{ form_row(form.quantite, {
                        label_class: 'mb-2 font-bold text-lg text-gray-900 underline',
                        widget_class: 'mt-2 flex border rounded-lg border-gray-200 bg-gray-50 p-2 w-max',
                    })
                    }}
                </div>
                <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                    {{ form_row(form.prixTTC, {
                        label_class: 'mb-2 font-bold text-lg text-gray-900 underline',
                        widget_class: 'mt-2 flex border rounded-lg border-gray-200 bg-gray-50 p-2 w-max',
                    })
                    }}
                </div>
            </div>
            <div class="flex flex-wrap -mx-3 mb-2 justify-center">
                <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                    {{ form_row(form.garantie, {
                        label_class: 'mb-3  font-bold text-lg text-gray-900 underline',
                        widget_class: 'mt-2 justify-between flex border rounded-lg border-gray-200 bg-gray-50 p-2 w-max',
                    })
                    }}
                </div>
                <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                    {{ form_row(form.typeGarantie, {
                        label_class: 'mb-2 font-bold text-lg text-gray-900 underline',
                        widget_class: 'mt-2 flex border rounded-lg border-gray-200 bg-gray-50 p-2 w-max',
                    })
                    }}
                </div>
            </div>
            <div class="flex flex-wrap -mx-3 mb-2 justify-center">
                <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                    {{ form_row(form.numImmo, {
                        label_class: 'mb-2 font-bold text-lg text-gray-900 underline',
                        widget_class: 'mt-2 flex border rounded-lg border-gray-200 bg-gray-50 p-2 w-max',
                    })
                    }}
                </div>
                <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                    {{ form_row(form.caracteristique, {
                        label_class: 'mb-2 font-bold text-lg text-gray-900 underline',
                        widget_class: 'mt-2 flex border rounded-lg border-gray-200 bg-gray-50 p-2 w-max',
                    })
                    }}
                </div>
            </div>
            <div class="flex flex-wrap -mx-3 mb-2 justify-center">
                <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                {{ form_row(form.pack, {
                    label_class: 'mb-2 font-bold text-lg text-gray-900 underline',
                    widget_class: 'mt-2 flex border rounded-lg border-gray-200 bg-gray-50 p-2 w-max',
                })
                }}
                </div>
                <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                    {{ form_row(form.commentaire, {
                        label_class: 'mb-2 font-bold text-lg text-gray-900 underline',
                        widget_class: 'mt-2 flex border rounded-lg border-gray-200 bg-gray-50 p-2 w-max',
                    })
                    }}
                </div>
            </div>
                <input type="submit" value="Envoyer">
            {{ form_end(form) }}
        </div>
    </div>
    </div>
    </body>
{% endblock %}