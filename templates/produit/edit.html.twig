{% extends 'base.html.twig' %}
{% block title %}Création tableau | Colaboration{% endblock %}
{% block body %}
    <body>
    <div class="justify-center flex items-center bg-blue-500 shadow-lg rounded-lg">
        <div class=" bg-white rounded shadow-2xl p-5 m-4 flex-wrap justify-center justify-between">
            {{ form_start(form) }}
            {# Première ligne #}
            <div class="flex flex-wrap -mx-3 mb-2">
                <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                    {{ form_row(form.designation, {
                        label_class: 'mb-2 font-bold text-lg text-gray-900 underline',
                        widget_class: 'mt-2 flex border rounded-lg border-gray-200 bg-gray-50 p-2 w-max',
                    }) }}
                </div>
                <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                    {{ form_row(form.marque, {
                        label_class: 'mb-2 font-bold text-lg text-gray-900 underline',
                        widget_class: 'mt-2 flex border rounded-lg border-gray-200 bg-gray-50 p-2 w-max',
                    }) }}
                </div>
                <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                    {{ form_row(form.reference, {
                        label_class: 'mb-2 font-bold text-lg text-gray-900 underline',
                        widget_class: 'mt-2 flex border rounded-lg border-gray-200 bg-gray-50 p-2 w-max',
                    }) }}
                </div>
            </div>
            {# Deuxièmre ligne #}
            <div class="flex flex-wrap -mx-3 mb-2 justify-center">
                <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                    {{ form_row(form.quantite, {
                        label_class: 'mb-2 font-bold text-lg text-gray-900 underline',
                        widget_class: 'mt-2 flex border rounded-lg border-gray-200 bg-gray-50 p-2 w-max',
                    }) }}
                </div>
                <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                    {{ form_row(form.prixTTC, {
                        label_class: 'mb-2 font-bold text-lg text-gray-900 underline',
                        widget_class: 'mt-2 flex border rounded-lg border-gray-200 bg-gray-50 p-2 w-max',
                    }) }}
                </div>
            </div>
            <div class="flex flex-wrap -mx-3 mb-2 justify-center">
                <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                    {{ form_row(form.garantie, {
                        label_class: 'mb-3  font-bold text-lg text-gray-900 underline',
                        widget_class: 'mt-2 justify-between flex border rounded-lg border-gray-200 bg-gray-50 p-2 w-max',
                    }) }}
                </div>
                <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                    {{ form_row(form.typeGarantie, {
                        label_class: 'mb-2 font-bold text-lg text-gray-900 underline',
                        widget_class: 'mt-2 flex border rounded-lg border-gray-200 bg-gray-50 p-2 w-max',
                    }) }}
                </div>
            </div>
            <div class="flex flex-wrap -mx-3 mb-2 justify-center">
                <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                    {{ form_row(form.numImmo, {
                        label_class: 'mb-2 font-bold text-lg text-gray-900 underline',
                        widget_class: 'mt-2 flex border rounded-lg border-gray-200 bg-gray-50 p-2 w-max',
                    }) }}
                </div>
                <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                    {{ form_row(form.caracteristique, {
                        label_class: 'mb-2 font-bold text-lg text-gray-900 underline',
                        widget_class: 'mt-2 flex border rounded-lg border-gray-200 bg-gray-50 p-2 w-max overflow-x-auto',
                    }) }}
                </div>
            </div>
            <div class="flex flex-wrap -mx-3 mb-2 justify-center">
                <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                    {{ form_row(form.pack, {
                        label_class: 'mb-2 font-bold text-lg text-gray-900 underline',
                        widget_class: 'mt-2 flex border rounded-lg border-gray-200 bg-gray-50 p-2 w-max',
                    }) }}
                </div>
                <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                    {{ form_row(form.commentaire, {
                        label_class: 'mb-2 font-bold text-lg text-gray-900 underline',
                        widget_class: 'mt-2 flex border rounded-lg border-gray-200 bg-gray-50 p-2 w-max',
                    }) }}
                </div>
            </div>
            <input type="submit" value="Envoyer">
            {{ form_end(form) }}
        </div>
    </div>
    </body>
{% endblock %}